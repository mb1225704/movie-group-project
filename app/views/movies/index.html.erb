<div>
  <h3>Hello <%=@user_display%>!</h3>
</div>

<div class="grid-x grid-margin-x">
  <% @movies.each do |movie|%>
    <%=link_to "/movies/#{movie.id}", class: "cell text-center large-4 small-12 callout movie-card" do %> 
        <img class="card-image" src="<%= movie.poster_image_url%>"/>
        <div class="card-content">
          <p><%= "#{movie.title} (#{movie.release_date})" %></p>
          <p><%="Quality Score: #{movie.avg_score}/10"%></p>
          <p class="label"><%=movie.genre%></p>
          <p class="label rating"><%= "Rated #{movie.rating}"%></p>
        </div>
    <%end%>
  <%end%>
</div>